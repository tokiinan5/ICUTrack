<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="3dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#d6e4ec"
        android:startColor="#E8E8E8"
        android:endColor="#c2c4c7"
        android:type="linear"
        />
    <margin
         android:top="5dp"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="0dp"
        android:bottom="2dp"
        />

    <stroke
        android:width="3dp"
        android:color="#bfb7b7"
        />
</shape>